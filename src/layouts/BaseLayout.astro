---
const { title } = Astro.props;
import ResetCss from '@components/ResetCss.astro';
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <title>{title}</title>
        <ResetCss />
    </head>
    <body>
        <main>
            <section>
                <slot />
            </section>
        </main>
    </body>
</html>
<style>
    main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 32px;

        @media (max-width: 700px) {
            padding: 4px;
        }
    }
    section {
        padding: 16px;
    }
</style>
