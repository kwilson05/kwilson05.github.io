---
const { title, og_type = 'website', description } = Astro.props;
import ResetCss from '@components/ResetCss.astro';
import Navmenu from '@components/NavMenu.astro';
import { OG_IMAGE_URL } from '../constants';
const BASE_URL = import.meta.env.SITE;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1.0" />
        <meta property="og:title" content={title} />
        <meta property="og:type" content={og_type} />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={OG_IMAGE_URL(BASE_URL)} />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta property="twitter:image" content={OG_IMAGE_URL(BASE_URL)} />
        <meta name="twitter:description" content={description} />
        <meta name="og:image:width" content="300" />
        <meta name="og:image:height" content="300" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <title>{title}</title>

        <ResetCss />
    </head>
    <body>
        <main>
            <Navmenu />
            <section>
                <slot />
            </section>
        </main>
    </body>
</html>
<style>
    main {
        max-width: 45rem;
        margin: 0 auto;
        padding: 12px 0px;

        @media (max-width: 700px) {
            padding-left: 8px;
            padding-right: 8px;
        }
    }
    section {
        padding: 16px;
    }
</style>
